@model CarInformationManagmentSystem.Models.Entities.CarType

<style>
    .form-group
    {
        margin-top: 20px;
    }
    .form-control
    {
        width: 30%;
        margin-bottom: 10px;
    }

</style>

<form asp-action="Create" method="post">
    <h3 style="margin-top: 20px;">Add Car Type</h3>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactPerson" class="control-label"></label>
        <input asp-for="ContactPerson" class="form-control" />
        <span asp-validation-for="ContactPerson" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" style="margin-right: 30px;"/>
        <a href="@Url.Action("Index", "Car")" class="btn btn-secondary">Back to List</a>
    </div>
</form>
